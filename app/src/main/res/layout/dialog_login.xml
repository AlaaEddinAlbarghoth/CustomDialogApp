<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <Button
            android:text="@string/login"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:id="@+id/btn_ok"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="28dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintTop_toBottomOf="@+id/et_pass" app:layout_constraintBottom_toBottomOf="parent"/>
    <EditText
            android:layout_width="363dp"
            android:layout_height="38dp"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/et_pass"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"
            android:hint="@string/password" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/et_username"/>
    <EditText
            android:layout_width="363dp"
            android:layout_height="38dp"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:id="@+id/et_username"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"
            android:hint="@string/email_or_username" android:layout_marginTop="16dp"
            app:layout_constraintTop_toTopOf="parent"
    />

    <Button
            android:text="@string/cancel"
            android:layout_width="175dp"
            android:layout_height="wrap_content"
            android:id="@+id/btn_cancel"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"
            app:layout_constraintEnd_toStartOf="@+id/btn_ok"
            android:layout_marginEnd="16dp" android:layout_marginTop="28dp"
            app:layout_constraintTop_toBottomOf="@+id/et_pass" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"/>
</android.support.constraint.ConstraintLayout>